<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
    <link href="~/css/custom.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/language.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" id="navbar" style="font-size:28px; background-color:#1a202c;">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav flex-grow-1 justify-content-center" id="navbarLinks">
                        <li class="nav-item" style="margin-right:28px">
                            <a class="nav-link text-white spa" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            @* <a class="nav-link text-white eng" asp-area="" asp-controller="Home" asp-action="Index">Index</a> *@
                        </li>
                        <li class="nav-item" style="margin-right:28px">
                            <a class="nav-link text-white spa" asp-area="" asp-controller="Home" asp-action="Proyectos">Proyectos</a>
                            @* <a class="nav-link text-white eng" asp-area="" asp-controller="Home" asp-action="Proyectos">Projects</a> *@
                        </li>
                        <li class="nav-item" style="margin-right:28px">
                            <a class="nav-link text-white spa" asp-area="" asp-controller="Home" asp-action="Resumen">Resumen</a>
                            @* <a class="nav-link text-white eng" asp-area="" asp-controller="Home" asp-action="Resumen">Summary</a> *@
                        </li>
                     @*    <li class="nav-item d-flex align-items-center">
                            <div class="toggle-button languageButton">EN</div>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted">
        <div class="container-fluid">
            Gonzalo Lamas - Portfolio
            <a href="https://github.com/GonzaLmas" target="_blank"<i class="bi bi-github" id="iconGithub"></i></a>
            <a href="https://www.linkedin.com/in/gonzalo-lamas-eze/" target="_blank"<i class="bi bi-linkedin" id="iconLinkedin"></i></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/language.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
